{
	"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
	"title": "Airbnb prices in NYC",
	"width": "container",
	"height": 800,
    "projection": {"scale": {"expr": "zoom_level"},
    "center": {"expr": "center_to"}},
	"params": [ 
    {
        "name": "stats_option",
        "value": "meanprice",
        "bind": {
            "input": "select",
            "options": [
                "meanprice",
                "meansfee"
            ],
			"title": [
				"Average price",
				"Average service fees"
			],
            "labels": ["Average Price", "Average Service Fees"],
            "name": "Stat to show: "
        }
    },
    {
            "name": "zoom_level",
            "value": 6500,
            "bind": {
                "input": "range",
                "min": 6000,
                "max": 10000,
                "step": 100,
                "name": "Zoom: "
            }
        },
        {
            "name": "center_to",
            "value": [-73.9, 40.9],
            "bind": {
                "input": "select",
                "options": [
                    [-78.4, 42.5],
                    [-73.9, 40.9]
                ],
                "labels": ["Wyoming County", "New York County"],
                "name": "Map Centre: "
            }
        }
	],
	"layer": [
        {
      "data": 
      {
        "url": "https://raw.githubusercontent.com/edenfrey/FIT3179_Visualisation2_Globe500/main/js/world_map/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
        {
			"data": {
				"url": "https://raw.githubusercontent.com/Will0Wisps/FIT3179-2022/main/Assignment2/overallnyc.json",
				"format": { "type": "topojson", "feature": "ne_10m_admin_2_counties" }
			},
			"transform": [{
				"calculate": "'Data is not available in ' + datum.properties.NAME",
				"as": "note"
			}],
			"mark": {
				"type": "geoshape",
				"fill": "#ddd",
				"stroke": "white",
				"strokeWidth": 1
        
			},
			"encoding": { "tooltip": { "field": "note" } }
		},
		{
			"data": {
				"url": "https://raw.githubusercontent.com/Will0Wisps/FIT3179-2022/main/Assignment2/airbnbnew.csv"
			},
			"transform": [{
					"lookup": "County",
					"from": {
						"data": {
							"url": "https://raw.githubusercontent.com/Will0Wisps/FIT3179-2022/main/Assignment2/overallnyc.json",
							"format": {
								"type": "topojson",
								"feature": "ne_10m_admin_2_counties"
							}
						},
						"key": "properties.NAME"
					},
					"as": "geo"
				},
        {
        "calculate": "datum[stats_option]",
        "as": "stats"
        }
			],
			"mark": { "type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5 },
			"encoding": {
				"shape": { "field": "geo", "type": "geojson" },
				"color": {
					"field": "stats",
          "title": "Cost ($USD)",
					"type": "quantitative",
					"scale": {
                        "type": "linear",
						"scheme": "yelloworangered"
					}
				},
				"tooltip": [
					{ "field": "County", "type": "nominal"},
					{
						"field": "meanprice",
						"type": "quantitative",
						"title": "Average price",
						"format": "$,.2f"
					},
					{ "field": "County", "type": "nominal"},
					{
						"field": "meansfee",
						"type": "quantitative",
						"title": "Average service fees",
						"format": "$,.2f"
					},
					{ "field": "County", "type": "nominal"},
					{
						"field": "number",
						"type": "quantitative",
						"title": "Count",
						"format": ","
					}
				]
			}
		}
	],
	"config": {"lineBreak": "linebreak"}
}